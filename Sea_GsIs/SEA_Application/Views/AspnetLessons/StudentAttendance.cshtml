            var ClassId = $("#ClassId").val();


            if (BranchId != "" && ClassId != "" && SectionId != "") {

                $.ajax({
                    type: "POST",
                    cache: false,
                    url: "/AspNetProject/BranchClassSectionStudents?BranchId=" + BranchId + "&ClassId=" + ClassId + "&SectionId=" + SectionId,
                    processData: false,
                    contentType: false,
                    success: function (data) {
                        var sch = JSON.parse(data);
                        console.log(sch);
