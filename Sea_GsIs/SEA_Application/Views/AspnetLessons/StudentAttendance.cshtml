                        var sch = JSON.parse(data);
                        console.log(sch);
                        var $el = $("#SectionId");
                        $el.empty();
                        var $e2 = $("#SubjectId");
                        $e2.empty();
                        var $e4 = $("#StudentId");
                        $e4.empty();

