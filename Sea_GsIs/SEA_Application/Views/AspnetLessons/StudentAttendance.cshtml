                                .attr("value", "").text('Select Section'));
                            for (i = 0; i < sch.length; i++) {

                                $el.append($("<option></option>")
                                    .attr("value", sch[i].Id).text(sch[i].Name));
                            }
                        }
                        else {
                            $el.append($("<option></option>")
                                .attr("value", '').text('Select Subject'));
                        }
                    }
                });
            }

            else {

                var $el = $("#SectionId");
                $el.empty();

                var $e2 = $("#SubjectId");
                $e2.empty();
                var $e4 = $("#StudentId");
                $e4.empty();


            }

        });

        $('#SectionId').change(function () {

            var SectionId = $(this).val();
