            var ClassId = $("#ClassId").val();
            var SectionId = $("#SectionId").val();
            var StudentId = $("#StudentId").val();
            var SubjectId = $("#SubjectId").val();


            if (BranchId != "" && ClassId != "" && SectionId != "" && StudentId != "" && SubjectId != "") {

                //$.ajax({
                //    type: "POST",

