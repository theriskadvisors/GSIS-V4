@model IEnumerable<SEA_Application.Models.AspNetAssessmentType>
@{
    ViewBag.Title = "Index";
}
<label>Home > User > <span class="text-primary">Term</span></label>
<h4>View Term</h4>
<label id="View">View Default</label>

<script>
    $(document).ready(function () {
        $("#example").dataTable();

        $('.table').on('click', 'tbody tr', function () {
            var td = $(this).children("td");
            var userName = $(td[0]).attr('data-item-id');
            userName = userName.trim();

            window.location.href = "/SuperAdmin/AssessmentTypeDetails?id=" + userName;
        });

        DrawTable();
    });

    function DrawTable() {
        $('#example_filter').addClass("form-group");
        $('#example_filter').addClass("has-feedback");
        $('#example_filter input').css({ "border": "1px solid #ddd", "border-radius": "40px", "height": "30px", "margin-top": "-5px", "outline": "none", "padding-left": "10px", "color": "#ddd !important" });
        $('#example_filter').append('<span class="glyphicon glyphicon-search form-control-feedback" style="margin-top: -33px; color: #666;"></span>');
        $('#example_length').append(
            '<div class="form-inline" style="margin-left: 138px !important; margin-top: -25px !important; z-index: -3 !important">'
          +
            '&nbsp;&nbsp;&nbsp;&nbsp;' +
            '<div class="form-group">' +
                 '<div class="d-bar"></div>' +
             '</div>' +
             '&nbsp;&nbsp;&nbsp;&nbsp;' +
                 '<div class="form-group">' +
                     '<div class="edit-section">' +
                         '<a href=""><i class="glyphicon glyphicon-repeat" data-toggle="tooltip" title="Refresh" data-placement="bottom"></i></a>' +
                         '<a class="" href="/SuperAdmin/CreateAssessmentType" id="edit-view-3" data-toggle="tooltip" title="Create" data-placement="bottom">&nbsp;' +
                             '<i class="glyphicon glyphicon-edit"></i>' +
                         '</a>' +
                        '<span class="default"><i class="fa fa-ban"></i>&nbsp;&nbsp;</span>' +
                         '<span><i class="glyphicon glyphicon-download-alt"></i></span>' +
                     '</div>' +
                 '</div>' +
             '<div class="form-group">' +
                 '<div class="d-bar"></div>' +
             '</div>' +
         '</div>'
         );

    }
</script>


@if (ViewBag.Error != null)
{
    <div class="box-alert" id="work">
        @ViewBag.Error
    </div>
}

<div class="box box-primary">
    <div class="box-body">
        <table class="table" id="example">
            <thead>
                <tr>
                    <th><b>Sr.</b></th>
                    <th>
                        <b>Title</b>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{ int row = 0; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-item-id="@item.Id">@(++row)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>