@model SEA_Application.Models.AspNetAssessmentType
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";

    if (ViewBag.Error == "" || ViewBag.Error == null)
    {
        ViewBag.Error = "";
    }
}

<div class="box box-primary">
    <div class="box-body">
        <h2 class="orange">Create Assessment Type &nbsp; <i class="fa fa-plus" aria-hidden="true"></i></h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            if (ViewBag.Error == "")
            {
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="UserName">Term Name <span class="red-mark">*</span></label>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                 
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-2">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                        <div class="col-md-2">
                            <button type="button" id="cancel" class="btn btn-danger">Cancel</button>
                        </div>
                    </div>
                </div>
            }
            else
            {
                @ViewBag.Error;
            }
        }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>


