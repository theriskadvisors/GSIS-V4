@model SEA_Application.Models.AspNetAssessmentType
@{
    ViewBag.Title = "Create";
}


<label>Home > User > <span class="text-primary">Students</span></label>
<h4>Terms</h4>
<label id="View">View Default</label>
<div class="box box-primary">
    <div class="box-body">
        <h2 class="orange">Create Term &nbsp; <i class="fa fa-plus" aria-hidden="true"></i></h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" }) <span class="red-mark">*</span>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-2">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
        }
    </div>
</div>
