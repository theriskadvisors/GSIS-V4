<div class="card">
    <div class="card-body p-4">

        <div class="box box-primary">
            <div class="box-title"></div>

            <div class="box-body">

                <input type="hidden" id="UserRole" name="name" value="@ViewBag.UserRole" />

                <div class="table-responsive">
                    <table class="table hover table-bordered table-striped" id="datatable">
                        <thead>
                            <tr>
                                <th hidden>
                                    Id
                                </th>

                                <th>
                                    Class Name
                                </th>

                                <th>
                                    Subject Name
                                </th>
                                <th>
                                    Topic
                                </th>
                                <th>
                                    Week
                                </th>

                                <th>
                                    Chapter
                                </th>
                                <th>
                                    Status
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td hidden>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AspNetClass.Name)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.AspNetCours.Name)


                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AspnetSubjectTopic.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Week)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Chapter)
                                    </td>
                                    @if (item.Status == true)
                                    {
                                        <td>
                                            <span style="color:green !important">Published</span>
                                        </td>
                                    }

                                    else
                                    {
                                        <td>
                                            <span style="color:red !important"> Not Published </span>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>

                        <tfoot>

                            <tr>
                                <th hidden>
                                    Id
                                </th>

                                <th>
                                    Class Name
                                </th>

                                <th>
                                    Subject Name
                                </th>
                                <th>
                                    Topic
                                </th>
                                <th>
                                    Week
                                </th>

                                <th>
                                    Chapter
                                </th>
                                <th>
                                    Status
                                </th>
                            </tr>

                        </tfoot>


                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
