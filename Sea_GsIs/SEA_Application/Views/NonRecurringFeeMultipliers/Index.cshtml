        background-color: #128edb !important;
        color: #ffffff !important;
    }

    #refresh:hover {
        background-color: #21cd54 !important;
        color: #ffffff !important;
    }

    #example tr > :nth-child(1) {
        display: none;
    }
</style>

<h2></h2>

<script>
    $(document).ready(function () {

        $("#PageHeader").html("NonRecurring Fee");

        $("#BreadCrumbs").append(' <li> <a href="/Account/Dashboard"> Home </a> <span>&gt;</span></li>');
        $("#BreadCrumbs").append(' <li class="active"><a id="BreadCrumps1" href="#">NonRecurring Fee</a></li>');

        var table = $('#datatable').dataTable({
            buttons: [
                {
