<script>
    $(document).ready(function () {
        
        var id=@ViewBag.AnnouncementID
        $.ajax({
            type: "POST",
            url: "/Parent/GetAnnouncementDetails",
            data:{id:id},
            success: function (data) {
                
                $("#title").val(data.Title);
                $("#desc").val(data.Description);
                $("#subject").val(data.Name);
            }
        })
    })
</script>
<html>
<body>
    <div class="box box-primary">
        <div class="box-body">
            <h4>Announcement Details</h4>
            <hr />

            <div class="col-md-12 form-group">
                <div class="col-md-2">
                    <span>Subject</span>
                </div>
                <div class="col-md-6">
                    <input type="text" class="form-control" id="subject" readonly/>
                </div>
            </div>
            <div class="col-md-12 form-group">
                <div class="col-md-2">
                    <span>Title</span>
                </div>
                <div class="col-md-6">
                    <input type="text" class="form-control" id="title" readonly/>
                </div>
            </div>
            <div class="col-md-12 form-group">
                <div class="col-md-2">
                    <span>Description</span>
                </div>
                <div class="col-md-6">
                    <textarea  class="form-control" style="height:166px" id="desc"  readonly></textarea>
                </div>
            </div>
            <hr />
            <div class="col-md-10 col-md-offset-2">
                <button class="col-md-2 form-control" onclick="window.location.href = '/Parent/Announcement'" style="border-radius:35px;border:hidden;margin-right:10px;background-color:#ff0000;color:#ffffff;font-size:11px;width:98px;height:38px;font-family:Montserrat" id="return"><i class="fa fa-arrow-left"></i> &nbsp;&nbsp; Return</button>
            </div>

        </div>
    </div>
</body>
</html>