@model SEA_Application.Models.NonRecurringMonth

@{
    ViewBag.Title = "Create";
}

    <script type="text/javascript">
        $(document).ready(function () {

            $("#PageHeader").html("Student Discount");
            $("#BreadCrumbs").append(' <li> <a href="/Accountant/Index"> Home </a> <span>&gt;</span></li>');
            $("#BreadCrumbs").append(' <li> <a href="/NonRecurringMonths/Index">NonRecurring Fee Instalments</a> <span>&gt;</span></li>');
            $("#BreadCrumbs").append(' <li class="active"><a id="BreadCrumps1" href="#">Create</a></li>');
        });

    </script>

@*<h2>Add Fee Months</h2>*@
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body p-5">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "Registerform" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @*<h4>NonRecurring Fee Month</h4>
                <hr />*@
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <span class="col-md-2">Student Name</span>
                            <div class="col-md-6">
                                @Html.DropDownList("StudentId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-2">Months</span>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Months, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.Months, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-2">Status</span>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-2">Instalment Amount</span>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.InstalmentAmount, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.InstalmentAmount, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-2">Issue Date</span>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.IssueDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                @Html.ValidationMessageFor(model => model.IssueDate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>

                    <input type="submit" value="Create" id="submit" form="Registerform" class="btn btn-primary pull-right rounded rounded-lg shadow-none mr-3" />
                    <button onclick="/*showTab(0); currentTab = 0;*/" class="btn btn-primary pull-right rounded rounded-lg bg-transparent text-muted shadow-none mr-3" type="reset">
                        <i class="material-icons mr-2">cached</i>  Reset &nbsp; &nbsp;
                        <div class="ripple-container"></div>
                    </button>

                    @*<button class="col-md-2 form-control" onclick="window.location.href = '/NonRecurringMonths/Index'" style="border-radius:35px;border:hidden;background-color:red;margin-right:10px;color:white;font-size:11px;width:98px;height:38px;font-family:Montserrat" id="return"><i class="fa fa-arrow-left"></i> &nbsp;&nbsp; Return</button>
                    <input class="col-md-2 form-control" id="submit" form="Registerform" type="submit" value="Save" style="border-radius:35px;color:white;border:hidden;background-color:#128edb;font-size:11px;width:98px;height:38px;font-family:Montserrat" />*@

                }
            </div>
        </div>
    </div>
</div>