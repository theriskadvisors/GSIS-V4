@using SEA_Application.Models
@model AspNetSection

@{
    var branchClassSection = (AspNetBranchClass_Sections)ViewBag.BranchClassSection;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="box box-primary">
        <div class="box-title"></div>
        <h3>Edit Class</h3>
        <hr />
        <div class="box-body">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label class="col-md-2 control-label">Section Id <</label>
                    <div class="col-md-6">
                        <input type="text" value="@Model.Id" disabled  class="form-control"/>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "col-md-2 control-label" })<span class="red-mark">*</span>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.Hidden("PreviousName", Model.Name)
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" >Class</label>
                    <div class="col-md-6">
                        <input type="text" value="@branchClassSection.AspNetBranch_Class.AspNetClass.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Branch</label>
                    <div class="col-md-6">
                        <input type="text" value="@branchClassSection.AspNetBranch_Class.AspNetBranch.Name" disabled class="form-control" />
                    </div>
                </div>

            </div>
        </div>
        <input id="FormSubmit" type="submit" value="Save" class="btn btn-primary" />
    </div>
}