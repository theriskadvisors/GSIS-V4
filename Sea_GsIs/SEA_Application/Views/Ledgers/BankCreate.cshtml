
@{
    ViewBag.Title = "BankCreate";
}
<style>
    span {
        font-family: Montserrat;
    }

    input {
        font-family: Montserrat;
    }

    .color:hover {
        background-color: #0e72af !important;
    }

    .color2:hover {
        background-color: #dc0000 !important;
    }

    #error-tag {
        color: red;
    }
</style>


<script>



    $(document).ready(function () {



        $("#PageHeader").html("Bank Account");

        $("#BreadCrumbs").append(' <li> <a href="/FinanceSummary/Index"> Home </a> <span>&gt;</span></li>');
        $("#BreadCrumbs").append(' <li class=""><a id="BreadCrumps1" href="/FinanceSummary/BankIndex">Bank Account</a> <span>&gt;</span></li>');
        $("#BreadCrumbs").append(' <li class="active"><a id="BreadCrumps1" href="#"> Create </a></li>');



        $("#error-tag").hide();
        $('#startingbalance').change(function () {
            debugger;
            var balance = $(this).val();

            if (balance > 0) {

                $('#submit').prop("disabled", false);
                $("#error-tag").hide();
            }
            else {

                $("#error-tag").show();
                $('#submit').prop("disabled", true);
            }

        });




    });

</script>




@if (ViewBag.Error != null)
{
    <span style="color:red">@ViewBag.Error</span>
}

<divs class="card">
    <div class="card-body p-4">
        <div class="col-md-8 col-md-offset-1" style="background-color:#f7f7f7;border-radius:10px;margin-top:50px;box-shadow: rgba(0, 0, 0, 0.16) 5px 10px 5px, rgba(0, 0, 0, 0.23) 0px 3px 5px">
            @using (Html.BeginForm("NewBankAccount", "Ledgers", FormMethod.Post, new { enctype = "multipart/form-data", id = "Registerform" }))
            {
                <h4 style="font-family:Montserrat">Add New Bank Account</h4>
                <hr />
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="form-group bmd-form-group my-3">
                            <label class="bmd-label-floating">Name</label>
                            <input type="text" name="name" class="form-control" required />
                            <br />
                        </div>
                    </div>
                </div>


                <div class="col-lg-12">
                    <div class="col-md-6">
                        <div class="form-group bmd-form-group my-3">
                            <label class="bmd-label-floating">Starting Balance</label>
                            <input type="number" name="startingbalance" class="form-control" id="startingbalance" />
                            @*<div class="error" id="error-tag">Balance must be greater than 0</div>*@

                        </div>
                    </div>
                </div>


                <div class="col-md-12">
                    <div class="col-md-6">
                        @*<span>Group</span>
                            @Html.DropDownList("LedgerGroupId", null, htmlAttributes: new { @class = "form-control", @style = "font-family:Montserrat" })
                            <br />*@



                        <div class="form-row mt-4">
                            <div class="form-group col-md-12 bmd-form-group">
                                <label for="" class="bmd-label-static pl-2">Group</label>

                                @*<select class="form-control" id="LedgerGroupId" name="LedgerGroupId" required></select>*@
                                @Html.DropDownList("LedgerGroupId", null, htmlAttributes: new { @class = "form-control", @style = "font-family:Montserrat" })

                            </div>



                        </div>
                    </div>
                </div>


                <div class="col-md-12">
                    <div class="col-md-6">
                        @*<span>Session</span>
                            @Html.DropDownList("SessionId", null, htmlAttributes: new { @class = "form-control", @required = "required", @style = "font-family:Montserrat" })*@


                        <div class="form-row mt-4">
                            <div class="form-group col-md-12 bmd-form-group">
                                <label for="" class="bmd-label-static pl-2">Session</label>

                                @*<select class="form-control" id="LedgerGroupId" name="LedgerGroupId" required></select>*@
                                @Html.DropDownList("SessionId", null, htmlAttributes: new { @class = "form-control", @required = "required", @style = "font-family:Montserrat" })

                            </div>
                        </div>



                        <br />
                    </div>
                </div>


            }
            <div class="col-md-12">
                <br />
                @*<button class="col-md-2 form-control color2" onclick="window.location.href = '/FinanceSummary/BankIndex'" style="border-radius:35px;border:hidden;margin-right:10px;background-color:red;color:white;font-size:11px;width:98px;height:38px;font-family:Montserrat" id="return"><i class="fa fa-arrow-left"></i> &nbsp;&nbsp; Return</button>
                        <input class="col-md-2 form-control color" id="submit" form="Registerform" type="submit" value="Save" style="        border-radius: 35px;
                    color: white;
                    border: hidden;
                    font-family: Montserrat;
                    background-color: #128edb;
                    font-size: 11px;
                    width: 98px;
                    height: 38px;
                    font-family: Montserrat" />*@



                <button style="background:white" type="button" onclick="window.location.href = '/FinanceSummary/BankIndex'" id="btnCancel" class="btn btn-primary rounded rounded-lg bg-transparent text-muted shadow-none mr-3">
                    <i class="material-icons mr-2">cached</i>  Return
                </button>

                <button type="submit" form="Registerform" id="SaveButton" class="btn btn-primary rounded rounded-lg"> Save </button>



                <br />
                <br /><br />
            </div>
        </div>
    </div>
</divs>